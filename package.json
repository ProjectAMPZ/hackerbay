{
  "name": "hackerbay",
  "version": "1.0.0",
  "description": "A simple stateless microservice in Nodejs, with three major functionalities - Authentication, JSON patching and Image Thumbnail Generation",
  "main": "index.js",
  "scripts": {
    "start": "node -r esm src/",
    "test": "nyc --reporter=text --reporter=html mocha --timeout 12000 -c -r esm --exit",
    "lint": "eslint src/**/* src/* --ext js",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jiokeokwuosa/hackerbay.git"
  },
  "keywords": [
    "backend",
    "Authentication",
    "JSON",
    "patching",
    "Image",
    "Thumbnail",
    "Generation"
  ],
  "author": "Okwuosa Chijioke",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jiokeokwuosa/hackerbay/issues"
  },
  "homepage": "https://github.com/jiokeokwuosa/hackerbay#readme",
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.6",
    "mocha": "^6.2.1",
    "nyc": "^14.1.1"
  },
  "dependencies": {
    "esm": "^3.2.25"
  }
}
